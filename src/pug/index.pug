doctype html
html
  head
    meta(charset='utf-8')
    title DRP Editor
    meta(name='description' content='DRP(diffuse reflectance profile) editor for subsurface scattering')
    script(src="main.js" type="module") 
    link(rel="stylesheet", href="./style.css")
  body
    h1 RDP Editor
    canvas#graph
    canvas#display(width="216px", height="317px")
    ul 
      li 
        label 曲線タイプ
          select#curveType
            option(value="gaussian") 正規分布
            option(value="spline") 3次スプライン
      li
        label 正規分布を3次スプラインにコンバート
          input#convertToSpline(type="button" value="コンバート")
      li
        label カーネルサイズ
          select#kernelSize
            option(value="13") 25
            option(value="9") 17
            option(value="6") 11
      li
        label 距離 
          input#distance(type="range" value="0.3" min="0" max="1" step="0.01")
      li
        label 色
          input#color(type="color",value="#D47C02")
      li
        label 変換する画像
          input#rawTex(type="file" accept="image/*")
      li
        label マスク画像
          input#maskTex(type="file" accept="image/*")


